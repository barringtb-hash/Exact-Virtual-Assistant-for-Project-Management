{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Design & Development Plan",
  "type": "object",
  "required": ["project_name", "phases"],
  "properties": {
    "project_name": { "type": "string", "minLength": 3 },
    "phases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": { "type": "string" },
          "owner": { "type": "string" },
          "status": { "type": "string" }
        }
      }
    },
    "requirements": {
      "type": "array",
      "items": { "type": "string" }
    },
    "risks": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": true
}
