    "formidable": "^3.5.4",
    "mammoth": "^1.7.2",
    "openai": "^4.58.0",
    "pdf-parse": "^1.1.1",
    "pdfmake": "^0.2.7",
    "pizzip": "^3.1.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "esbuild": "^0.19.12"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^24.9.2",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "cypress": "^15.5.0",
    "jsdom": "^24.0.0",
    "kill-port": "^2.0.1",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.9.3",
    "vite": "^5.4.8",
    "vitest": "^2.1.1",
    "wait-on": "^7.0.1"
