{
  "name": "exact-virtual-assistant-pm",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "pretest": "node tests/setup-stubs.mjs",
    "test": "node --loader ./tests/jsx-loader.mjs --test tests/**/*.test.js",
    "test:unit": "node --loader ./tests/jsx-loader.mjs --test tests/**/*.test.js",
    "test:e2e": "playwright test",
    "e2e:smoke": "cypress run --browser electron --spec 'cypress/e2e/00-smoke/**/*.cy.ts'",
