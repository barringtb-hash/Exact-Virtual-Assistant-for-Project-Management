<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Project Charter</title>
    <style>
      :root {
        color-scheme: light;
        font-family: "Helvetica Neue", Arial, sans-serif;
      }

      body {
        margin: 0;
        padding: 32px;
        color: #1e293b;
        background: #ffffff;
        font-size: 14px;
        line-height: 1.6;
      }

      header {
        border-bottom: 3px solid #0f172a;
        padding-bottom: 12px;
        margin-bottom: 24px;
      }

      h1 {
        font-size: 28px;
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 0.08em;
      }

      .generated {
        margin-top: 6px;
        font-size: 12px;
        color: #475569;
      }

      h2 {
        font-size: 18px;
        margin: 32px 0 12px;
        color: #0f172a;
        text-transform: uppercase;
        letter-spacing: 0.06em;
      }

      .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 16px;
      }

      .card {
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        padding: 16px;
        background: #f8fafc;
      }

      .label {
        font-size: 11px;
        font-weight: 600;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        color: #64748b;
        margin-bottom: 4px;
        display: block;
      }

      .value {
        font-size: 14px;
        color: #0f172a;
        white-space: pre-wrap;
      }

      ul, ol {
        padding-left: 18px;
        margin: 0;
      }

      li + li {
        margin-top: 4px;
      }

      table {
        border-collapse: collapse;
        width: 100%;
      }

      th, td {
        border: 1px solid #e2e8f0;
        padding: 8px 10px;
        text-align: left;
        vertical-align: top;
      }

      th {
        background: #e2e8f0;
        font-size: 12px;
        letter-spacing: 0.05em;
        text-transform: uppercase;
      }

      .muted {
        color: #94a3b8;
        font-style: italic;
      }
    </style>
  </head>
  <body>
    <header>
      <h1>Project Charter</h1>
      <div class="generated">Generated on {{generatedOn}}</div>
    </header>

    <section>
      <h2>Overview</h2>
      <div class="grid">
        <div class="card">
          <span class="label">Project Name</span>
          <span class="value">{{projectName}}</span>
        </div>
        <div class="card">
          <span class="label">Sponsor</span>
          <span class="value">{{sponsor}}</span>
        </div>
        <div class="card">
          <span class="label">Project Lead</span>
          <span class="value">{{projectLead}}</span>
        </div>
        <div class="card">
          <span class="label">Start Date</span>
          <span class="value">{{startDate}}</span>
        </div>
        <div class="card">
          <span class="label">Target Completion</span>
          <span class="value">{{endDate}}</span>
        </div>
      </div>
    </section>

    <section>
      <h2>Vision</h2>
      <div class="card">
        <span class="value">{{vision}}</span>
      </div>
    </section>

    <section>
      <h2>Problem Statement</h2>
      <div class="card">
        <span class="value">{{problem}}</span>
      </div>
    </section>

    <section>
      <h2>Description</h2>
      <div class="card">
        <span class="value">{{description}}</span>
      </div>
    </section>

    <section>
      <h2>Scope</h2>
      <div class="grid">
        <div class="card">
          <span class="label">In Scope</span>
          <ul>
            {{#scopeIn}}
              <li>{{.}}</li>
            {{/scopeIn}}
            {{^scopeIn}}
              <li class="muted">Not provided</li>
            {{/scopeIn}}
          </ul>
        </div>
        <div class="card">
          <span class="label">Out of Scope</span>
          <ul>
            {{#scopeOut}}
              <li>{{.}}</li>
            {{/scopeOut}}
            {{^scopeOut}}
              <li class="muted">Not provided</li>
            {{/scopeOut}}
          </ul>
        </div>
      </div>
    </section>

    <section>
      <h2>Success Metrics</h2>
      {{#successMetrics}}
        <div class="card">
          <span class="label">Benefit</span>
          <span class="value">{{benefit}}</span>
          <span class="label">Metric</span>
          <span class="value">{{metric}}</span>
          <span class="label">Measurement</span>
          <span class="value">{{system_of_measurement}}</span>
        </div>
      {{/successMetrics}}
      {{^successMetrics}}
        <div class="card">
          <span class="value muted">No success metrics provided.</span>
        </div>
      {{/successMetrics}}
    </section>

    <section>
      <h2>Milestones</h2>
      {{#milestones}}
        <div class="card">
          <span class="label">Phase</span>
          <span class="value">{{phase}}</span>
          <span class="label">Deliverable</span>
          <span class="value">{{deliverable}}</span>
          <span class="label">Target Date</span>
          <span class="value">{{dateDisplay}}</span>
        </div>
      {{/milestones}}
      {{^milestones}}
        <div class="card">
          <span class="value muted">No milestones provided.</span>
        </div>
      {{/milestones}}
    </section>

    <section>
      <h2>Core Team</h2>
      {{#coreTeam}}
        <div class="card">
          <span class="label">Name</span>
          <span class="value">{{name}}</span>
          <span class="label">Role</span>
          <span class="value">{{role}}</span>
          {{#responsibilities}}
            <span class="label">Responsibilities</span>
            <span class="value">{{.}}</span>
          {{/responsibilities}}
          {{^responsibilities}}
            <span class="value muted">No responsibilities documented.</span>
          {{/responsibilities}}
        </div>
      {{/coreTeam}}
      {{^coreTeam}}
        <div class="card">
          <span class="value muted">No team members documented.</span>
        </div>
      {{/coreTeam}}
    </section>

    <section>
      <h2>Risks</h2>
      <div class="card">
        <ul>
          {{#risks}}
            <li>{{.}}</li>
          {{/risks}}
          {{^risks}}
            <li class="muted">No risks identified.</li>
          {{/risks}}
        </ul>
      </div>
    </section>

    <section>
      <h2>Assumptions</h2>
      <div class="card">
        <ul>
          {{#assumptions}}
            <li>{{.}}</li>
          {{/assumptions}}
          {{^assumptions}}
            <li class="muted">No assumptions listed.</li>
          {{/assumptions}}
        </ul>
      </div>
    </section>
  </body>
</html>
