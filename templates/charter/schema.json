{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ProjectCharter",
  "type": "object",
  "required": [
    "project_name",
    "sponsor",
    "project_lead",
    "start_date",
    "end_date",
    "vision",
    "problem",
    "description"
  ],
  "properties": {
    "project_name": {
      "type": "string",
      "minLength": 3
    },
    "sponsor": {
      "type": "string"
    },
    "project_lead": {
      "type": "string"
    },
    "start_date": {
      "type": "string",
      "format": "date"
    },
    "end_date": {
      "type": "string",
      "format": "date"
    },
    "vision": {
      "type": "string"
    },
    "problem": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "scope_in": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "scope_out": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "assumptions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "milestones": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["phase", "deliverable", "date"],
        "properties": {
          "phase": { "type": "string" },
          "deliverable": { "type": "string" },
          "date": { "type": "string", "format": "date" }
        }
      }
    },
    "success_metrics": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "benefit",
          "metric",
          "system_of_measurement"
        ],
        "properties": {
          "benefit": { "type": "string" },
          "metric": { "type": "string" },
          "system_of_measurement": { "type": "string" }
        }
      }
    },
    "core_team": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "role"],
        "properties": {
          "name": { "type": "string" },
          "role": { "type": "string" },
          "responsibilities": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    }
  }
}
